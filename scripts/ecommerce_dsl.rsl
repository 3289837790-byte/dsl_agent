domain "电商客服机器人"

state start:
    response "您好，这里是京东商城。请问您是想查询物流，还是申请退款？"
    transition query_logistics "查询物流状态" -> ask_order_id
    transition request_refund "申请退款" -> ask_refund_reason

state ask_order_id:
    response "好的，请提供您的订单号。"
    transition provide_order_id "提供订单号" -> show_logistics

state show_logistics:
    response "您的订单正在派送中，预计明天送达。"
    end

state ask_refund_reason:
    response "很抱歉给您带来不便。请问退款原因是什么？（质量问题/拍错了/不想要了）"
    transition reason_quality "质量问题" -> human_service
    transition reason_mistake "拍错了或不想要了" -> confirm_refund

state human_service:
    response "检测到质量问题，正在为您转接人工客服，请稍候..."
    end

state confirm_refund:
    response "明白，退款申请已提交，系统将自动审核。"
    end